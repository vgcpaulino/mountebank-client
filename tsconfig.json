{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "src",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "**/tests/**/*",
        "**/temp/*",
        "dist",
        "examples/**/*",
        "jest.config.js",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
