{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "src",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    },
    "include": ["src/**/*", "index.d.ts"],
    "exclude": ["node_modules", "**/__tests__/*", "**/temp/*", "src/main.ts", "src/helpers/**/*"],
    "ts-node": { "files": true }
}
